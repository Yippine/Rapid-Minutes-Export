# Rapid Minutes Export Environment Configuration
# Copy this file to .env and modify values as needed

# Application Configuration
APP_NAME=Rapid-Minutes-Export
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=True
ENVIRONMENT=development

# Ollama AI Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_TIMEOUT=60
OLLAMA_MAX_RETRIES=3

# File Paths Configuration
TEMPLATES_DIR=./templates
DATA_DIR=./data
INPUT_DIR=./data/input
UPLOAD_DIR=./uploads
OUTPUT_DIR=./data/output
TEMP_DIR=./data/temp
STATIC_DIR=./static

# File Processing Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.txt
UPLOAD_TIMEOUT_SECONDS=30
PROCESSING_TIMEOUT_SECONDS=300
CLEANUP_INTERVAL=3600

# Document Generation Configuration
DEFAULT_TEMPLATE=default_meeting.docx
WORD_TEMPLATE_DIR=./templates/word
PDF_OUTPUT_QUALITY=high
DOCUMENT_AUTHOR=Rapid-Minutes-Export

# API Configuration
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000
MAX_REQUEST_SIZE_MB=15

# Security Configuration
SECRET_KEY=change-me-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
TRUST_HOST_HEADER=False

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Performance Configuration
WORKERS=1
WORKER_CONNECTIONS=1000
MAX_CONCURRENT_PROCESSES=5
CACHE_TTL_SECONDS=3600

# Monitoring Configuration
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=True

# Development Configuration
RELOAD=True
RELOAD_DIRS=src,static,templates
HOT_RELOAD=True
